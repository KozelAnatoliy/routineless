import { BaseStackProps, RoutinelessFunction, capitalize } from '@routineless/cdk'
import { Stack } from 'aws-cdk-lib'
import type { Construct } from 'constructs'

export class <%= className %>Stack extends Stack {
  constructor(scope: Construct, id: string, props: BaseStackProps) {
    super(scope, id, props)

    new RoutinelessFunction(this, '<%= className %>Function', {
      ...props,
      functionName: `<%= className %>${capitalize(props.env.envName)}`,
    })
  }
}
