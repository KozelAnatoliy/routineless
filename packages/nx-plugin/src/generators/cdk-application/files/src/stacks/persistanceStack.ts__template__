import { Stack } from 'aws-cdk-lib';
import * as s3 from 'aws-cdk-lib/aws-s3';
import type { Construct } from 'constructs';
import type { BaseStackPorps } from '../types/baseStackProps';

export class PersistanceStack extends Stack {
  public readonly s3Bucket: s3.Bucket;

  constructor(scope: Construct, id: string, props: BaseStackPorps) {
    super(scope, id, props);

    this.s3Bucket = new s3.Bucket(this, `Bucket`, {
      bucketName: `test-bucket-${props.env.envName}`,
    });
  }
}
