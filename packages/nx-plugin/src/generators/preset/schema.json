{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Preset",
  "title": "",
  "type": "object",
  "properties": {
    "unitTestRunner": {
      "description": "Adds the specified unit test runner",
      "type": "string",
      "enum": ["jest", "none"],
      "default": "jest"
    },
    "linter": {
      "description": "The tool to use for running lint checks.",
      "type": "string",
      "enum": ["eslint", "tslint"],
      "default": "eslint"
    },
    "infraAppName": {
      "description": "Infrastructure management application name.",
      "type": "string",
      "default": "infra",
      "x-prompt": "Enter infra application name",
      "alias": "i"
    },
    "lambdaAppName": {
      "description": "Initial aws lambda app name",
      "type": "string",
      "x-prompt": "Enter initial aws lambda name (you can skip it and lambda will note be generated)",
      "alias": "l"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false
    }
  },
  "required": []
}
